@model SAP.Models.DEPARTAMENTO

@{
    ViewBag.Title = "Nuevo Departamento";
}

<div class="tile">
    <h2 class="text-center">Nuevo Departamento</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal col-md-20">
            <h4>DEPARTAMENTO</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="form-inline">
                    <label class="col-md-3">Departamento padre</label>
                    @Html.DropDownList("DEP_ID_DEPARTAMENTO", null, "Seleccione un departamento padre para el sub-departamento", htmlAttributes: new { @class = "form-control col-md-7" })
                    @Html.ValidationMessageFor(model => model.DEP_ID_DEPARTAMENTO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-inline">
                    <div class="col-md-3">
                        <label>Nombre del Departamento</label>
                    </div>
                    @Html.EditorFor(model => model.NOMBRE_DEPARTAMENTO, new { htmlAttributes = new { @class = "form-control col-md-7" } })
                    @Html.ValidationMessageFor(model => model.NOMBRE_DEPARTAMENTO, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="form-inline">
                    <label class="col-md-3">Empresa</label>
                    @Html.DropDownList("ID_EMPRESA", null, "Empresa", htmlAttributes: new { @class = "form-control col-md-7" })
                    @Html.ValidationMessageFor(model => model.ID_EMPRESA, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-inline">
                <div class="col-md-offset-2 col-md-8">
                </div>
                <input type="submit" value="Nuevo" class="btn btn-primary " />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
    </div>

</div>