@model SAP.Models.PERIODICIDAD_ANUAL

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>PERIODICIDAD ANUAL</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_PERIODICIDAD)


    <div class="form-group">
        Año
        <div class="col-md-2">
            @Html.EditorFor(model => model.ANIO_PERIODICIDAD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ANIO_PERIODICIDAD, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Periodicidad
        <div class="col-md-2">
            <select name="PERIODICIDAD_SELECT" class="form-control">
                @if (Model.MENSUAL)
                {
                    @:<option value="0" selected>Mensual</option>
                }
                else
                {
                    @:<option value="0">Mensual</option>
                }
                @if (Model.QUINCENAL)
                {
                    @:<option value="1" selected>Quincenal</option>
                }
                else
                {
                    @:<option value="1">Quincenal</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

