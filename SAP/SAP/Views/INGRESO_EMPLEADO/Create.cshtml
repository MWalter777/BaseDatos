@model SAP.Models.INGRESO_EMPLEADO

@{
    ViewBag.Title = "Create";
}

    <div class="tile">
        <h2>Nuevo</h2>
        @if (ViewBag.error != null)
        {
            <h2 class="text-center alert-danger">@ViewBag.error</h2>
        }

        @if (ViewBag.exito != null)
        {
            <h2 class="text-center alert-success">@ViewBag.exito</h2>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>INGRESO EMPLEADO</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    EMPLEADO
                    <div class="col-md-8">
                        <select name="ID_EMPLEADO" class="form-control">
                            @foreach (var item in ViewBag.EMPLEADOS)
                            {
                                <option value="@item.ID_EMPLEADO">
                                    @item.CODIGO_EMPLEADO - @item.APELLIDO_PATERNO @item.APELLIDO_MATERNO , @item.PRIMER_NOMBRE @item.SEGUNDO_NOMBRE
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    CATALOGO INGRESO
                    <div class="col-md-8">
                        <select name="ID_INGRESO" class="form-control">
                            @foreach (var item in ViewBag.CATALOGO_INGRESO)
                            {
                                <option value="@item.ID_INGRESO">
                                    @item.NOMBRE_INGRESO ( @item.INGRESO )
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.HABILITAR_INGRESO)
                    @Html.ValidationMessageFor(model => model.HABILITAR_INGRESO, "", new { @class = "text-danger" })
                    Habilitar ingreso
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>

