@model SAP.Models.INGRESO_EMPLEADO

@{
    ViewBag.Title = "Detalles ingreso empleado";
}

    <div class="tile">
        <h3>Detalles</h3>

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    EMPLEADO
                </dt>

                <dd>
                    @ViewBag.EMPLEADO_INFO.APELLIDO_PATERNO  @ViewBag.EMPLEADO_INFO.APELLIDO_MATERNO ,
                    @ViewBag.EMPLEADO_INFO.PRIMER_NOMBRE @ViewBag.EMPLEADO_INFO.SEGUNDO_NOMBRE
                </dd>

                <dt>
                    CATALOGO INGRESO
                </dt>

                <dd>
                    @ViewBag.CATALOGO_INGRESO_INFO.NOMBRE_INGRESO ( @ViewBag.CATALOGO_INGRESO_INFO.INGRESO )
                </dd>

                <dt>
                    HABILITADO
                </dt>

                @if (ViewBag.HABILITAR_INGRESO)
                {
                    <dd>INGRESO HABILITADO</dd>
                }
                else
                {
                    <dd>INGRESO NO HABILITADO</dd>

                }


            </dl>
        </div>
        <p>


            <div class="form-actions no-color">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
            </div>

        </p>
    </div>
