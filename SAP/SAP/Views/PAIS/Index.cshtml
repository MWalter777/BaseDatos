@model IEnumerable<SAP.Models.PAIS>

@{
    ViewBag.Title = "Index";
}

    <div class="tile">
        <h2>PAÍSES</h2>
        @if (ViewBag.error != null)
        {
            <h2 class="text-center alert-danger">@ViewBag.error</h2>
        }

        <p>
            @Html.ActionLink("Nuevo País", "Create", null, new { @class = "btn btn-success" })
        </p>
        <table class="table">
            <tr>
                <th>
                    NOMBRE DE PAÍS
                </th>
                <th>
                    CÓDIGO DE PAÍS
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE_PAIS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CODIGO_PAIS)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ID_PAIS }, new { @class = "btn btn-warning" }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.ID_PAIS }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_PAIS }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>

