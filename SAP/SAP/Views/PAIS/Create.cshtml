@model SAP.Models.PAIS

@{
    ViewBag.Title = "Create";
}

    <div class="tile">
        <h2>Nuevo</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>PAÍS</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    NOMBRE DE PAÍS
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NOMBRE_PAIS, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NOMBRE_PAIS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    CÓDIGO DE PAÍS
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CODIGO_PAIS, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CODIGO_PAIS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>

