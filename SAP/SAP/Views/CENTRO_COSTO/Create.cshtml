@model SAP.Models.CENTRO_COSTO

@{
    ViewBag.Title = "Create";
}

<h2>Nuevo Centro de Costos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="tile">
    <h4>CENTRO DE COSTOS</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <div class="form-inline">
            <label class="col-md-3">Monto que se asignará al Centro de costos</label>
            @Html.EditorFor(model => model.MONTO_ASIGNADO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MONTO_ASIGNADO, "", new { @class = "text-danger" })
        </div>
    </div>

    

    <div class="form-group">
        <div class="form-inline">
            <label class="col-md-3">Departamento</label>
            @Html.DropDownList("ID_DEPARTAMENTO", "Seleccione el Departamento")
            @Html.ValidationMessageFor(model => model.ID_DEPARTAMENTO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-inline">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

