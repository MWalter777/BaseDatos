@model SAP.Models.CENTRO_COSTO

@{
    ViewBag.Title = "Edit";
}

<h2>Aumentar Presupuesto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="tile">
    <h4>PRESUPUESTO</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_CENTRO_COSTO)
    @Html.HiddenFor(model => model.MONTO_ASIGNADO)
    @Html.HiddenFor(model => model.ANIO)
    @Html.HiddenFor(model => model.SALDO)
    @Html.HiddenFor(model => model.ID_DEPARTAMENTO)

    <div class="form-group">
        <div class="form-inline">
            <label class="col-md-3">Departamento:</label>
            @Html.DisplayFor(model => model.DEPARTAMENTO.NOMBRE_DEPARTAMENTO)
        </div>
    </div>
    <div class="form-group">
        <div class="form-inline">
            <label class="col-md-3">Aumento:</label>

            <input type="number" name="valor" />

        </div>
    </div>


    <div class="form-inline">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

