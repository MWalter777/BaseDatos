@model SAP.Models.CATALOGO_INGRESO

@{
    ViewBag.Title = "Create";
}

<h2>Nuevo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>CATALOGO INGRESO</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        Nombre
        <div class="col-md-6">
            @Html.EditorFor(model => model.NOMBRE_INGRESO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NOMBRE_INGRESO, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.DELEY_INGRESO)
        @Html.ValidationMessageFor(model => model.DELEY_INGRESO, "", new { @class = "text-danger" })
        De ley
    </div>
    <div class="form-group">
        Ingreso
        <div class="col-md-2">
            @Html.EditorFor(model => model.INGRESO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.INGRESO, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ACTIVO)
        @Html.ValidationMessageFor(model => model.ACTIVO, "", new { @class = "text-danger" })
        Activo
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

