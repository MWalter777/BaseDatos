@model SAP.Models.PROFESION

@{
    ViewBag.Title = "Create";
}

<h2>Nueva Profesion</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PROFESION</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            NOMBRE DE PROFESION
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBRE_PROFESION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOMBRE_PROFESION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            CODIGO DE LA PROFESION
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_PROFESION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID_PROFESION, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

