@model SAP.Models.DESCUENTO_RENTA

@{
    ViewBag.Title = "Crear descuento de renta";
}

<div class="tile">
	<h2>Crear descuento de Renta</h2>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(model => model.MIN_RENTA, "Salario mínimo a aplicar", htmlAttributes: new { @class = "control-label col-md-3" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.MIN_RENTA, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.MIN_RENTA, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.MAX_RENTA, "Salario máximo a aplicar", htmlAttributes: new { @class = "control-label col-md-3" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.MAX_RENTA, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.MAX_RENTA, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.PORCENTAJE_RENTA, "Porcentaje de renta (en formato decimal 9,99)", htmlAttributes: new { @class = "control-label col-md-5" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.PORCENTAJE_RENTA, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.PORCENTAJE_RENTA, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Crear" class="btn btn-primary" />
				</div>
			</div>
		</div>
	}

	<div>
		@Html.ActionLink("Regresar al listado de renta", "Index", null, new { @class = "btn btn-secondary"})
	</div>

</div>


