@model SAP.Models.DESCUENTO_RENTA

@{
    ViewBag.Title = "Editar descuento de Renta";
}

<div class="tile">
	<h2>Editar descuento de Renta</h2>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.ID_DESCUENTO_RENTA)

			<div class="form-group">
				@Html.LabelFor(model => model.MIN_RENTA, htmlAttributes: new { @class = "control-label col-md-3" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.MIN_RENTA, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.MIN_RENTA, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.MAX_RENTA, htmlAttributes: new { @class = "control-label col-md-3" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.MAX_RENTA, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.MAX_RENTA, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.PORCENTAJE_RENTA, htmlAttributes: new { @class = "control-label col-md-3" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.PORCENTAJE_RENTA, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.PORCENTAJE_RENTA, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Guardar" class="btn btn-primary" />
				</div>
			</div>
		</div>
	}

	<div>
		@Html.ActionLink("Regresar al listado de Renta", "Index", null, new { @class = "btn btn-secondary" })
	</div>

</div>

