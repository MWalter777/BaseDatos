@model IEnumerable<SAP.Models.GENERO>

@{
    ViewBag.Title = "Listado de géneros";
}

<div class="tile">
	<h2>Listado de géneros</h2>
	<p>
		@Html.ActionLink("Nuevo Género", "Create", null, new { @class = "btn btn-success"})
	</p>
	<table class="table">
		<tr>
			<th>
				Nombre de género
			</th>
			<th></th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.NOMBRE_GENERO)
				</td>
				<td>
					@Html.ActionLink("Editar", "Edit", new { id = item.ID_GENERO }, new { @class = "btn btn-warning" }) |
					@Html.ActionLink("Detalles", "Details", new { id = item.ID_GENERO }, new { @class = "btn btn-info" }) |
					@Html.ActionLink("Eliminar", "Delete", new { id = item.ID_GENERO }, new { @class = "btn btn-danger"})
				</td>
			</tr>
		}
	</table>
</div>

