@model SAP.Models.SUB_REGION

@{
    ViewBag.Title = "Edit";
}

    <div class="tile">
        <h2>Actualización</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>SUB REGIÓN</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_SUB_REGION)

                <div class="form-group">
                    NOMBRE DE SUB REGIÓN
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NOMBRE_SUB_REGION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NOMBRE_SUB_REGION, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    CÓDIGO DE SUBREGIÓN
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CODIGO_SUB_REGION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CODIGO_SUB_REGION, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    REGION
                    <div class="col-md-10">
                        @Html.DropDownList("ID_REGION", "Seleccione la Region")
                        @Html.ValidationMessageFor(model => model.ID_REGION, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary"})
        </div>
    </div>

