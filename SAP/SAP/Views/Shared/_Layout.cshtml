<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>@ViewBag.Title</title>
    <!-- Main CSS-->
    @Styles.Render("~/Content/css/main.css")
    @Styles.Render("~/Content/css/font-awesome.min.css")
</head>
<body class="app sidebar-mini rtl">
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" href="/">Inicio</a>

        <ul class="app-nav">
            @if (@Session["username"] != null)
            {
                <li><a class="app-nav__item" href="/Usuario/perfil">@Session["email"] <i class="fa fa-user fa-lg"> </i> @Session["username"]</a></li>
                <li><a class="app-nav__item" href="/Usuario/logout"><i class="fa fa-user fa-lg"></i>Salir</a></li>
            }

            @if (@Session["username"] == null)
            {
                <li class="dropdown">
                    <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu"><i class="fa fa-user fa-lg"></i>Iniciar sesion</a>
                    <ul class="dropdown-menu settings-menu dropdown-menu-right">
                        <li><a class="dropdown-item" href="/Usuario/login"><i class="fa fa-user fa-lg"></i> iniciar sesion</a></li>
                        <li><a class="dropdown-item" href="/Usuario/create"><i class="fa fa-user fa-lg"></i>Registrarse</a></li>
                    </ul>
                </li>
            }
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div class="app-sidebar__user">
            <img class="app-sidebar__user-avatar" src="https://s3.amazonaws.com/uifaces/faces/twitter/jsa/48.jpg" alt="User Image">
            <div>
                @if (Session["username"] != null)
                {
                    <p class="app-sidebar__user-name">@Session["username"]</p>
                    <p class="app-sidebar__user-designation">@Session["email"]</p>
                }
                else
                {
                    <p class="app-sidebar__user-name">Nombre</p>
                    <p class="app-sidebar__user-designation">correo</p>
                }
            </div>
        </div>
        <ul class="app-menu" id="menu_mostrar_dinamico">
        </ul>
    </aside>
    <main class="app-content">
        <div class="container body-content">
            @RenderBody()
        </div>
    </main>
    <!-- Essential javascripts for application to work-->
    @Scripts.Render("~/Scripts/js/plugins/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/js/plugins/dataTables.bootstrap.min.js")
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @Scripts.Render("~/Scripts/js/jquery-3.2.1.min.js")

    @Scripts.Render("~/Scripts/js/popper.min.js")
    @Scripts.Render("~/Scripts/js/bootstrap.min.js")
    @Scripts.Render("~/Scripts/js/main.js")


    @Scripts.Render("~/Scripts/js/plugins/pace.min.js")
    @Scripts.Render("~/Scripts/js/plugins/chart.js")

    <!-- The javascript plugin to display page loading on top-->
    <script type="text/javascript">
        $('#menu_mostrar_dinamico').load("http://localhost:52228/Home/Servicio");
        $('#sampleTable').DataTable();
    </script>
    
    <script type="text/javascript">
      var data = {
      	labels: ["January", "February", "March", "April", "May"],
      	datasets: [
      		{
      			label: "My First dataset",
      			fillColor: "rgba(220,220,220,0.2)",
      			strokeColor: "rgba(220,220,220,1)",
      			pointColor: "rgba(220,220,220,1)",
      			pointStrokeColor: "#fff",
      			pointHighlightFill: "#fff",
      			pointHighlightStroke: "rgba(220,220,220,1)",
      			data: [65, 59, 80, 81, 56]
      		},
      		{
      			label: "My Second dataset",
      			fillColor: "rgba(151,187,205,0.2)",
      			strokeColor: "rgba(151,187,205,1)",
      			pointColor: "rgba(151,187,205,1)",
      			pointStrokeColor: "#fff",
      			pointHighlightFill: "#fff",
      			pointHighlightStroke: "rgba(151,187,205,1)",
      			data: [28, 48, 40, 19, 86]
      		}
      	]
      };
      var pdata = [
      	{
      		value: 300,
      		color: "#46BFBD",
      		highlight: "#5AD3D1",
      		label: "Complete"
      	},
      	{
      		value: 50,
      		color:"#F7464A",
      		highlight: "#FF5A5E",
      		label: "In-Progress"
      	}
      ]

      var ctxl = $("#lineChartDemo").get(0).getContext("2d");
      var lineChart = new Chart(ctxl).Line(data);

      var ctxp = $("#pieChartDemo").get(0).getContext("2d");
      var pieChart = new Chart(ctxp).Pie(pdata);
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>











