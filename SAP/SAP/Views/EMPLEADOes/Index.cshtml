@model IEnumerable<SAP.Models.EMPLEADO>

@{
    ViewBag.Title = "Empleados";
}
<div class="tile">
    <h2 class="text-center">Empleados</h2>
    @if (ViewBag.error != null)
    {
        <h2 class="text-center alert-danger">@ViewBag.error</h2>
    }

    <p>
        <a href="/empleadoes/create" class="btn btn-success">
            Nuevo empleado
        </a>
    </p>
    <table class="table" id="sampleTable">
        <thead>
            <tr>
                <th>
                    Apellido
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Puesto
                </th>
                <th>
                    Genero
                </th>
                <th>
                    Correo personal
                </th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.APELLIDO_PATERNO @item.APELLIDO_MATERNO
                    </td>
                    <td>
                        @item.PRIMER_NOMBRE @item.SEGUNDO_NOMBRE
                    </td>
                    <td>
                        @item.direccion.CANTON, @item.direccion.BARRIO
                    </td>
                    <td>
                        @item.puesto.NOMBRE_PUESTO
                    </td>
                    <td>
                        @item.genero.NOMBRE_GENERO
                    </td>
                    <td>
                        @item.CORREO_PERSONAL
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ID_EMPLEADO }, htmlAttributes: new { @class = "btn btn-warning" }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.ID_EMPLEADO }, htmlAttributes: new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_EMPLEADO }, htmlAttributes: new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>